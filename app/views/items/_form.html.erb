<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.text_field :name, class:'form-control', placeholder:'Nama item' %>
  </div>

  <div class="form-group">
    <%= form.number_field :cost, class:'form-control', placeholder:'Harga pokok' %>
  </div>

  <div class="form-group">
    <%= form.number_field :price, class:'form-control', placeholder:'Harga jual' %>
  </div>

  <div class="form-group">
    <%= form.text_field :description, class:'form-control', placeholder:'Deskripsi' %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
